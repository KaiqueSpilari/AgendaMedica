@model IEnumerable<AgendaMedica.Models.Paciente>

@{
	ViewData["Title"] = "Cadastro de Pacientes";
}


<div class="container text-dark">
	<h1 class="text-center display-5">Cadastro de <span class="fw-bold">Pacientes</span></h1>

	<p>
		<a asp-action="Create" class="btn btn-outline-dark btn-lg w-25"> <i class="bi bi-plus circle"></i> Adicionar</a>
	</p>

	<table class="table table-dark table-striped table-borderless">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Prontuario)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.CPF)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.DataNascimento)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Celular)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Email)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Prontuario)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CPF)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.DataNascimento)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Celular)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.PacienteId">Edit</a> |
						<a asp-action="Details" asp-route-id="@item.PacienteId">Details</a> |
						<a asp-action="Delete" asp-route-id="@item.PacienteId">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>